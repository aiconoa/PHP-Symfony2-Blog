{% extends 'base.html.twig' %}

{%  block header %}
    <h1>{{ app.user.username | title }}'s profile</h1>
{%  endblock %}

{% block main %}
    <a href="{{ path('app_article_create') }}">Create a new article</a>
    <h2>Your articles</h2>
    <table class="table table-striped table-bordered table-hover">
        <thead>
        <tr>
            <th>Title</th>
            <th>Content</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.title }}</td>
                <td>{{ article.content }}</td>
                <td><a href="{{ path('app_article_edit', {'id' : article.id}) }}">edit</a> <a href="{{ path('app_article_delete', {'id' : article.id}) }}">delete</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}