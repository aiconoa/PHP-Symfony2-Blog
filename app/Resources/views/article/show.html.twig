{% extends 'base.html.twig' %}

{% block main %}
    {% if is_granted('edit', article) %}
        <a href="{{ path('app_article_edit', {'id' : article.id}) }}">Éditer</a>
    {% endif %}
<article>
    <h1>{{ article.title }}</h1>
    <p>Crée le: {{article.createdOn|date("d/m/Y") }} par {{ article.author.username }}</p>
    <p>{{ article.content|raw }}</p>
</article>
{% endblock %}